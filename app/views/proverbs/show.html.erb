<h2><%= @proverb.klingon %></h2>

<p>
  <b>Translation</b>:
  <em><%= @proverb.translation %></em>
</p>

<p>
  <b>Active</b>: 
  <%= @proverb.active ? "Yes" : "No" %>
</p>

<div class="form-actions">
  <%= link_to 'Back', proverbs_path, :class => 'btn'  %>
  <%= link_to 'Edit', edit_proverb_path(@proverb), :class => 'btn' %>
  <%= link_to 'Delete', proverb_path(@proverb), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
</div>
